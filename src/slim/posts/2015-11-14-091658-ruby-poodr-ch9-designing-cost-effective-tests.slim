          assert_respond_to(@object, :width)
        end
      end
      
      class WheelTest < MiniTest::Unit::TestCase
        include DiameterizableInterfaceTest
        
        def setup
          @wheel = @object = Wheel.new(26, 1.5)
        end
        
        def test_calculates_diameter
          # ...
        end
